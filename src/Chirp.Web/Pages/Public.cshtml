@page "/"
@model Chirp.Razor.Pages.PublicModel
@{
    ViewData["Title"] = "Chirp!";
    Layout = "Shared/_Layout";
}

<div>
    <h2> Public Timeline </h2>

    @if (Model.Cheeps.Any())
    {
        <ul id="messagelist" class="cheeps">
            @foreach (var cheep in Model.Cheeps)
            {
                <li>
                    <p>
                        <strong>
                            <a href="/@cheep.Author">@cheep.Author</a>
                        </strong>
                        @cheep.Message
                        <small>&mdash; @cheep.Timestamp</small>
                    </p>
                </li>
            }
        </ul>
    }
    else
    {
        <em>There are no cheeps so far.</em>
    }
    <center>
        @if (Model.HasPreviousPage) 
        {
            <a href="/?page=@Model.PreviousPage" class="btn btn-primary">Previous</a>
        }
        else 
        {
            <a class="btn btn-primary" disabled>Previous</a>
        }
        <span>@Model.CurrentPage</span>
        @if (Model.HasNextPage) 
        {
            <a href="/?page=@Model.NextPage" class="btn btn-primary">Next</a>
        }
        else
        {
            <a class="btn btn-primary" disabled>Next</a>
        }
        
    </center>
</div>
