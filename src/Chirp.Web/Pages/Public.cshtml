@page "/"
@model Chirp.Razor.Pages.PublicModel
@using Chirp.Razor.Pages
@using Microsoft.AspNetCore.Identity

@inject SignInManager<Author> SignInManager
@inject UserManager<Author> UserManager
@{
    ViewData["Title"] = "Chirp!";
    Layout = "Shared/_PaginationLayout";
    var routeName = ViewContext.HttpContext.GetRouteValue("author");
}

<div>
    <h2> Public Timeline </h2>
    <partial name="_SubmitMessage" />
    <p>@ViewData["Error"]</p>
    @if (Model.Cheeps.Any())
    {
        <ul id="messagelist" class="cheeps">
            @foreach (var cheep in Model.Cheeps)
            {
                <li>
                    <p>
                        <strong>
                            <a href="/@Uri.EscapeDataString(cheep.Author)">@cheep.Author</a>
                        </strong>
                        @cheep.Message
                        <small>&mdash; @cheep.Timestamp</small>
                        <small>Likes @cheep.LikeCounter</small> <!-- Change this to someting better later. -->
                        <button type="button" class="like-btn @(cheep.UserHasLiked ? "liked" : "")" data-id="@cheep.CheepId">
                            @(cheep.UserHasLiked ? "Unlike" : "Like")
                        </button>

                        <span id="likeCount-@cheep.CheepId">@cheep.LikeCounter</span>


                    </p>
                </li>
            }
        </ul>
    }
    else
    {
        <em>There are no cheeps so far.</em>
    }
</div>
@section Scripts {
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            document.querySelectorAll(".like-btn").forEach(btn => {
                btn.addEventListener("click", function () {
                    let id = this.dataset.id;

                    fetch(`?handler=Like&id=${id}`, {
                        method: "POST",
                        headers: {
                            "RequestVerificationToken":
                                document.querySelector('input[name="__RequestVerificationToken"]').value
                        }
                    })
                        .then(response => response.json())
                        .then(data => {
                            // update like count in UI
                            document.getElementById("likeCount-" + id).textContent = data.likeCount;
                        });
                });
            });
        });
    </script>
}