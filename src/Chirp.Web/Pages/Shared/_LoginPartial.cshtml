@using Microsoft.AspNetCore.Identity
@using Microsoft.AspNetCore.Mvc;
@using Microsoft.AspNetCore.Mvc.RazorPages;

@inject SignInManager<Author> SignInManager
@inject UserManager<Author> UserManager

<div class=navigation>
    @{ 
        bool signedIn = false; 
        string name = "";
        string nameUrl = "";
    }
    @if (SignInManager.IsSignedIn(User))
    {
        var user = await UserManager.GetUserAsync(User);
        if (user != null) {
            signedIn = true;
            name = user.Name;
            nameUrl = Uri.EscapeDataString(name);
        } else {
            await SignInManager.SignOutAsync();
        }
    }
        
    @if (signedIn) 
    {
        <div>
            <a href="/@(nameUrl)">my timeline</a> |
            <a href="/">public timeline</a> |
            <a asp-area="Identity" asp-page="/Account/Manage/PersonalData">about me</a> |
            <a asp-area="Identity" asp-page="/Account/Logout">
                <form class="form-inline" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })"
                    asp-area="Identity" method="post">
                    <button style="margin: 0;" type="submit">logout [@(name)]</button>
                </form>
            </a>
        </div>
    }
    else
    {
        <div>
            <a href="/">public timeline</a> |
            <a asp-area="Identity" asp-page="/Account/Register">register</a> |
            <a asp-area="Identity" asp-page="/Account/Login">login</a>
        </div>
    }
</div>